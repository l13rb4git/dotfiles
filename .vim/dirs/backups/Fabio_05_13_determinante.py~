from array_utils import *
from Fabio_05_12_soma_diagonais import ta_na_secundaria


def main():
    matriz = matriz_input()
    print("teste")
    print("Esta matriz tem o determinante %d"%(determinante(matriz)))


def determinante(matriz):
    if len(matriz) == 1:
        return matriz[0][0]
    elif len(matriz) == 2:
        return determinante_2x2(matriz)
    else:
        return determinante_matriz_maior(matriz)


def determinante_2x2(matriz):
    produto_primaria = 1
    produto_secundaria = 1
    for i in range(len(matriz)):
        for j in range(len(matriz[i])):
            if i == j :
                produto_primaria *= matriz[i][j]
    for i in range(len(matriz)):
        for j in range(len(matriz[i])):
            if ta_na_secundaria(len(matriz), i, j):
                produto_secundaria *= matriz[i][j]
    return produto_primaria - produto_secundaria


def matriz_espelhada(matriz):
    matriz_espelhada = array(len(matriz), (len(matriz) + len(matriz) - 1))
    matriz_espelhada = cp_array(matriz,matriz_espelhada)
    show_matriz(matriz_espelhada)
    for i in range(len(matriz)):
        count_esplh = len(matriz)
        count_mtz = 0
        while count_mtz < len(matriz) and count_esplh < len(matriz_espelhada[i]):
            print(i, count_esplh, count_mtz)
            matriz_espelhada[i][count_esplh] = matriz[i][count_mtz]
            count_mtz += 1
            count_esplh += 1
    return matriz_espelhada



def determinante_matriz_maior(matriz):
    matriz_espelhada(matriz)


main()
