"""Atividade_Fabio02_Condicionais; Fabio_2a_01_calcula_igualdade_tres_numeros

Leia 3 (três) números, verifique e escreva quantos números iguais
existem entre os números.

"""


def main():
    mostrar_info_programa()

    primeiro_numero = get_numero_ordenado('primeiro')
    segundo_numero = get_numero_ordenado('segundo')
    terceiro_numero = get_numero_ordenado('terceiro')

    qtd_numeros_iguais = calcular_qtd_iguais(primeiro_numero,
                                             segundo_numero,
                                             terceiro_numero)
    mostrar_quantos_iguais(qtd_numeros_iguais)


def mostrar_info_programa():
    """Mostra ao usuário informações sobre o funcionamento do programa. """
    print("Informe 3 (três) números e será mostrado quantos deles são iguais.")


def get_numero_ordenado(posicao):
    """Solicita ao usuário o enésimo número requerido. """
    return int(input("Digite o %s número: " % posicao))


def calcular_qtd_iguais(primeiro_numero, segundo_numero, terceiro_numero):
    contador_iguais = 1
    # Repete-se de acordo com a quantidade de números testados.
    if primeiro_numero == segundo_numero or primeiro_numero == terceiro_numero:
        contador_iguais += 1

    if segundo_numero == terceiro_numero:
        contador_iguais += 1

    contador_iguais += incremento_se_iguais(primeiro_numero, segundo_numero)
    contador_iguais += incremento_se_iguais(primeiro_numero, terceiro_numero)
    contador_iguais += incremento_se_iguais(segundo_numero, terceiro_numero)

    return contador_iguais


def incremento_se_iguais(numero, outro_numero):
    """Retorna 01 de incremento caso os valores forem iguais. """
    if numero == outro_numero:
        return 1
    return 0


def mostrar_quantos_iguais(qtd_numeros_iguais):
    if qtd_numeros_iguais > 1:
        if qtd_numeros_iguais == 2:
            resultado = "dois são iguais."
        else:
            resultado = "todos são iguais."

    else:
        resultado = "todos são diferentes."

    print("Dos números fonecidos %s" % resultado)


if __name__ == '__main__':
    main()
