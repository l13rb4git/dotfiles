"""Lista_Fabio02_Condicionais	Fabio_2a_26_idade_em_dias_meses_anos

Determine a idade de uma pessoa, em anos, meses e dias, dadas a data
(dia, mês e ano) do seu nascimento e a data (dia, mês e ano) atual.

"""


def main():
    mostrar_info_programa()
    dia_atual, mes_atual, ano_atual = map(int, input(
        "Digite a data atual (Ex: 09/09/1999): ").split("/"))

    dia_nascimento, mes_nascimento, ano_nascimento = map(int, input(
        "Digite o sua data de nascimento (Ex: 09/09/1999): ").split("/"))

    calcular_idade(dia_atual, mes_atual, ano_atual,
                   dia_nascimento, mes_nascimento, ano_nascimento)


def mostrar_info_programa():
    """Mostra ao usuário informações sobre o funcionamento do programa. """
    print("Informe a data de hoje e data de seu nascimento, será mostrado "
          "quantos anos, meses e dias de idade você tem. ")


def calcular_idade(dia_atual, mes_atual, ano_atual,
                   dia_nascimento, mes_nascimento, ano_nascimento):

    idade_anos = ano_atual - ano_nascimento

    if not ocorreu_aniversario(dia_atual, mes_atual,
                               dia_nascimento, mes_nascimento):
        idade_anos -= 1
        idade_meses = (12 - mes_nascimento) + mes_atual
        idade_dias = (30 - dia_nascimento) + dia_atual
    else:
        idade_meses = mes_atual - mes_nascimento
        idade_dias = dia_atual - dia_nascimento

    mostrar_idade(idade_dias, idade_meses, idade_anos)


def ocorreu_aniversario(dia_atual, mes_atual, dia_nascimento, mes_nascimento):
    return (mes_atual > mes_nascimento) \
        or (mes_atual == mes_nascimento and dia_atual >= dia_nascimento)


def mostrar_idade(idade_dias, idade_meses, idade_anos):
    texto_anos = string_tempo(idade_anos, 'ano')
    texto_meses = string_meses(idade_meses)
    texto_dias = string_tempo(idade_dias, 'dia')
    virgula = string_virgula(idade_dias, idade_meses, idade_anos)
    adicao = string_aditiva(idade_dias, idade_meses, idade_anos)

    print(texto_dias, virgula, texto_meses, adicao, texto_anos,
          sep='', end='.')


def string_tempo(valor, unidade):
    texto = ''
    if valor == 1:
        texto = '%d %s' % (valor, unidade)
    elif valor > 1:
        texto = '%d %ss' % (valor, unidade)
    return texto


def string_meses(idade_meses):
    texto = ''
    if idade_meses == 1:
        texto = '%d mês' % idade_meses
    elif idade_meses > 1:
        texto = '%d meses' % idade_meses
    return texto


def string_virgula(idade_dias, idade_meses, idade_anos):
    texto = ''
    if idade_dias > 0 and idade_meses > 0:
        texto = ', '
        if idade_anos <= 0:
            texto = ' e '
    return texto


def string_aditiva(idade_dias, idade_meses, idade_anos):
    texto = ''
    if (idade_dias > 0 or idade_meses > 0) and idade_anos > 0:
        texto = ' e '
    return texto


if __name__ == '__main__':
    main()
