from importacao import *
from funcionalidades import *
from tools import *


def main():
    # Inicializando uma lista com dados dos colegios
    colegios = []
    colegios = inicializar_dados()
    
    opcao = -1
    while opcao != 0:
        limpar_a_tela()
        # Recebendo do usu√°rio a opcao que deseja executar
        opcao = get_opcao(menu_principal(), 0, 1) 
        
        if opcao == 1:
            limpar_a_tela()
            # Mostra na tela os 10 primeiros colegios do ranking
            top_colegios(colegios)

        elif opcao == 2:
            limpar_a_tela()
            pass

        # Aguarda o usuario apertar a tecla [Enter]
        limpar_a_tela()
        wait()

    
    # Mensagem de encerramento do Aplicativo
    print("Aplicativo Encerrado.")


if __name__ == '__main__':
    main()
