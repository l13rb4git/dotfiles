#include <stdio.h>

void info_programma(){
    printf("Informe a data atual e do seu nascimento será mostrado quantos anos você tem.\n");
}

struct Tuple {
    int dia;
    int mes;
    int ano;
};

struct Tuple  get_data(char *tipo){
    static int data[3];

    printf("Digite a data %s.\n", tipo);

    printf("digite o dia: ");
    scanf("%i", &data[0]);

    printf("digite o mês: ");
    scanf("%i", &data[1]);

    printf("digite o ano: ");
    scanf("%i", &data[2]);

    printf("\n");

    struct Tuple tuple_data = {data[0], data[1], data[2]};

    return tuple_data;
}

int completou_ano(struct Tuple data_atual, struct Tuple data_nascimento){
    if ((data_atual.mes > data_nascimento.mes) || 
        (data_atual.mes == data_nascimento.mes && data_atual.dia >= data_nascimento.dia)){

        return 1;
    }

    return 0;
}

int get_idade(struct Tuple data_atual, struct Tuple data_nascimento){
    int anos_idade = data_atual.ano - data_nascimento.ano;

    if (!completou_ano(data_atual, data_nascimento))
        anos_idade--;

    return anos_idade;
}

void mostrar_idade(int anos_idade){
    printf("Você tem %d anos de idade.", anos_idade);
}

int main(){
    /* int data_atual[3], data_nascimento[3]; */
    info_programma();
    struct Tuple data_atual = get_data("atual");
    struct Tuple data_nascimento = get_data("do seu nascimento");

    int anos_idade =  get_idade(data_atual, data_nascimento);

    mostrar_idade(anos_idade);



    return 0;
}
