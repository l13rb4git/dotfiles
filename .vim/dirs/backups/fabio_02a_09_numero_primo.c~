#include <stdio.h>


void info_programma(){
    printf("Informe um número de 0 à 100 será mostrado se ele é primo ou não.\n");
}

int eh_primo_divisor(int numero){
    if (numero == 3 || numero == 5 || numero == 7 || numero == 11)
        return 1;

    return 0;
}

int nao_eh_divisivel_por_primo(int numero){
    if (eh_primo_divisor(numero) 
        || (numero % 3 != 0 && numero % 5 != 0 && numero % 7 != 0 && numero % 11 != 0)){

        return 1;
    }

    return 0;
}

int quociente_compativel(int numero){
    if (numero / 3 <= 3 || numero / 5 <= 5 || numero / 7 <= 7 || numero / 11 <= 11)
        return 1;

    return 0;
}

int verificar_se_primo(int numero){
    if (numero == 2 || numero > 2 && numero % 2 != 0)
        if (nao_eh_divisivel_por_primo(numero) && quociente_compativel(numero))
            return 1;

    return 0;
}

void mostra_resultado_primo(int eh_primo){
    if (eh_primo){
        printf("O número é primo.\n");
    } else {
        printf("O número não é primo.\n");
    }

}

int main(){
    int numero, eh_primo;

    info_programma();

    printf("Digite um número: ");
    scanf("%d", &numero);

    eh_primo = verificar_se_primo(numero);

    mostra_resultado_primo(eh_primo);

    return 0;
}
