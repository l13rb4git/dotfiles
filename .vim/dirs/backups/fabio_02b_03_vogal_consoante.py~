"""Lista_Fabio_02b_Condicionais	fabio_02b_03_vogal_consoante

Leia uma letra e verifique se a letra digitada é vogal ou consoante.

"""


def main():
    mostrar_info_programa()
    letra = input("Digite a letra: ")

    mostrar_resultado(letra)


def mostrar_info_programa():
    """Mostra ao usuário informações sobre o funcionamento do programa. """
    print("Informe uma letra para saber ela é uma vogal ou consoante.")


def eh_vogal(letra):
    return eh_vogal_maiuscula(letra) or eh_vogal_minuscula(letra)


def eh_vogal_minuscula(letra):
    return letra == 'a' or letra == 'e' or letra == 'i' or letra == 'o' or letra == 'u'


def eh_vogal_maiuscula(letra):
    return letra == 'A' or letra == 'E' or letra == 'I' or letra == 'O' or letra == 'U'


def mostrar_resultado(letra):
    resultado = "consoante"
    if eh_vogal(letra):
        resultado = "vogal"

    print("Esta letra é uma %s." % resultado)


if __name__ == '__main__':
    main()
