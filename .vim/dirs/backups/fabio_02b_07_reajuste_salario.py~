def mostrar_info_programa():
    """Mostra ao usuário informações sobre o funcionamento do programa. """
    print("Informe um valor corresponde ao seu sálario para saber quanto de "
          "aumento você irá receber.")


def get_salario():
    """Socilita ao usuário um valor em reais corespondente ao seu sálario. """
    return float(input("Digite o seu sálario:"))


if __name__ == '__main__':
    main()
