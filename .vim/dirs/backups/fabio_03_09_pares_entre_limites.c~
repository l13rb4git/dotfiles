#include <stdio.h>


void info_programa()
{
    printf("Informe um limite inferior e um superior, será mostrado todos os números pares neste intervalo.\n");
}


void pares_no_intervalo(int inicio, int final)
{
    if (inicio <= final)
    {
        if (inicio % 2 == 0)
            printf("%d", inicio);

        pares_no_intervalo(inicio+1, final);
    }
    
}


int main(){
    info_programa();

    int limite_inferior, limite_superior;

    printf("Digite o limite inferior: ");
    scanf("%d", &limite_inferior);
    printf("Digite o limite superior: ");
    scanf("%d", &limite_superior);

    pares_no_intervalo(limite_inferior, limite_superior);

    return 0;
}
