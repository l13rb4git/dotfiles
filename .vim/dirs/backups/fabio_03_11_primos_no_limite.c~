#include <stdio.h>


void info_programa()
{
    printf("Informe um limite inferior e um superior, será mostrado todos os números primos neste intervalo.\n");
}


int eh_primo(int num)
{
    if (num <= 1) return 0;
    if (num <= 3) return 1;

    if (num % 2 == 0 || num % 3 == 0) return 0;

    static int i = 5;

    if (i * i <= num)
    {
        if (num % i == 0 || num % (i + 2) == 0)
        {
            return 0;
        }
        else
        {
            return 1;
        }

        i += 6;
        eh_primo(num);
    }
}


void primos_no_intervalo(int inicio, int final)
{
    if (inicio <= final)
    {
        if (eh_primo(inicio))
            printf("%d ", inicio);

        primos_no_intervalo(inicio+1, final);
    }
}


int main(){
    info_programa();

    int limite_inferior, limite_superior;

    printf("Digite o limite inferior: ");
    scanf("%d", &limite_inferior);
    printf("Digite o limite superior: ");
    scanf("%d", &limite_superior);

    primos_no_intervalo(limite_inferior, limite_superior);

    return 0;
}
