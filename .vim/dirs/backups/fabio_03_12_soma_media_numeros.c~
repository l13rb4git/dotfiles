#include <stdio.h>


void info_programa()
{
    printf("Informe a quantidade de números que deseja fazer as operações e os números, será mostrado a soma e a média deles.");
}


void fazer_operacoes(int qtd_num)
{
    static int enesimo_num = 1;
    int new_num;

    static int soma = 0;
    float media;

    if (enesimo_num <= qtd_num)
    {
        printf("Digite o %dº número: ", enesimo_num);
        scanf("%d", &new_num);

        soma += new_num;
        enesimo_num++;
        fazer_operacoes(qtd_num);
    }
    else
    {
        media = soma / qtd_num;
        printf("A soma é: %d\n", soma);
        printf("A média dos números é: %0.1f\n", media);
    }
}

int main(){
    info_programa();

    int qtd_num;

    printf("Digite a quantidade: ");
    scanf("%d", &qtd_num);

    fazer_operacoes(qtd_num);

    return 0;
}
