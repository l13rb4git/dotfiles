#include <stdio.h>


void info_programa()
{
    printf("Digite o um número N para ver os N primeiros termos da sequencia.\n");
}


void sequencia(int n)
{
    static int i = 1;
    static int interation = 1;
    
    if (interation <= n)
    {
        printf("%d ", i);

        i += interation - 1;
        interation++;
        sequencia(n);
    }
    
}


int main(){
    info_programa();

    int limite;
    printf("Digite o número: ");
    scanf("%d", &limite);

    sequencia(limite);

    return 0;
}
