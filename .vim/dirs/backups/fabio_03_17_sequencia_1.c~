#include <stdio.h>


void info_programa()
{
    printf("Informe um número limite para ver o valor dado pela sequencia a ele.\n");
}


int sequencia(int n)
{
    static float interation = 1;
    static float soma = 0;

    if (interation <= n)
    {
        printf("%f\n", soma);
        soma += 1 / interation;
        interation++;
        sequencia(n);
    }

    return soma;
}


int main()
{
    info_programa();

    int limite;
    printf("Digite o número N: ");
    scanf("%d", &limite);

    float sequencia_valor = sequencia(limite);

    printf("Valor: %1.5f\n", sequencia_valor);

    return 0;
}
