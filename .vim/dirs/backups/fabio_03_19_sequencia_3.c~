#include <stdio.h>


void info_programa()
{
    printf("Informe um número limite para ver o valor dado pela sequencia a ele.\n");
}


int sequencia(int n)
{
    static int interation = 1;
    static float soma = 0;

    if (interation <= n - 1)
    {
        if (interation % 2 != 0) soma += interation / (n - (interation - 1));
        if (interation % 2 == 0) soma -= (n - (interation - 1)) / interation;

        interation++;
        sequencia(n);
    }

    return soma + n;
}


int main()
{
    info_programa();

    int limite;
    printf("Digite o número N: ");
    scanf("%d", &limite);

    float sequencia_valor = sequencia(limite);

    printf("Valor: %1.5f\n", sequencia_valor);

    return 0;
}
