#include <stdio.h>


void info_programa()
{
    printf("Informe um n√∫mero limite para ver o valor dado pela sequencia a ele.\n");
}


int sequencia()
{
    static int interation = 1;
    static int count_imp = 1;
    static float soma = 0;

    if (interation <= 50)
    {
        soma += count_imp / interation;

        interation++;
        count_imp += 2;
        sequencia();
    }

    return soma;
}


int main()
{
    info_programa();

    float sequencia_valor = sequencia();

    printf("Valor: %1.5f\n", sequencia_valor);

    return 0;
}
