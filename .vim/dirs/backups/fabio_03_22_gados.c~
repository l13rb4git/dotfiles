#include <stdio.h>


void info_programa()
{
    printf("Informe os dados de indentificação dos animais bovinos para saber qual o mais magro e o mais gordo.\n");
}


typedef struct
{
    int id;
    char *nome;
    float peso;
} boi;


void bovinos(int qtd_animais)
{
    boi boi_atual = {0};
    static boi boi_magro = {0, "null", 999};
    static boi boi_gordo = {0};
    /* static char nome_boi_magro[4]; */
    /* static int peso_boi_magro = 0; */
    /* static int id_boi_gordo; */
    /* static char nome_boi_gordo[4]; */
    /* static int peso_boi_gordo = 0; */

    static int i = 1;

    if (i <= qtd_animais)
    {
        boi_atual.id = i;
        printf("Digite os dados do %dº boi: \n", i);

        printf("Digite o nome: ");
        scanf("%s", &boi_atual.nome);
        getchar();

        printf("Digite o peso em kg do animal: ");
        scanf("%f", &boi_atual.peso);
        getchar();

        if (boi_atual.peso >= boi_gordo.peso)
        {
            boi_gordo.id = boi_atual.id;
            boi_gordo.nome = boi_atual.nome;
            boi_gordo.peso = boi_atual.peso;
        }

        if (boi_atual.peso <= boi_magro.peso)
        {
            boi_magro.id = boi_atual.id;
            boi_magro.nome = boi_atual.nome;
            boi_magro.peso = boi_atual.peso;
        }

        i++;
        bovinos(qtd_animais);
    }
    else
    {
        printf("\nBoi mais gordo: \n");
        printf("ID: %d \nNome: %s \nPeso:%3.4fkg\n\n", boi_gordo.id, &boi_gordo.nome, boi_gordo.peso);
        printf("Boi mais magro: \n");
        printf("ID: %d \nNome: %s \nPeso:%3.4fkg\n", boi_magro.id, &boi_magro.nome, boi_magro.peso);
    }

}


int main()
{
    info_programa();

    int qtd_animais;
    printf("Digite quantos animais deseja adicionar: ");
    scanf("%d", &qtd_animais);

    bovinos(qtd_animais);

    return 0;
}
