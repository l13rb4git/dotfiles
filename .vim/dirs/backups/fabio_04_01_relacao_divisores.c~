#include <stdio.h>


void info_programa()
{
    printf("Informe quantos numeros desejar para saber quais são os seus divisores.\n");
}


int get_ensimo_inteiro(int enesimo)
{
    printf("Digite o %dº número [ou 0 para encerrar o programa]: ", enesimo);
    int numero;
    scanf("%d", &numero);
    return numero;
}


void mostrar_divisores(int numero)
{
    static int divisor = 1;

    if (divisor == 1) printf("Os divisores de %d são: ", numero);

    if (divisor <= numero)
    {
        if (numero % divisor == 0)
        {
            printf("%d ", divisor);
        }

        if (numero % 2 != 0)
        {
            divisor += 2;
        }
        else
        {
            divisor++;
        }
        mostrar_divisores(numero);
    }
    else
    {
        divisor = 1;
        printf("\n\n");
    }
}


void receber_dados_e_fazer_operacoes()
{
    static int i = 1;
    int numero = get_ensimo_inteiro(i);

    if (numero != 0)
    {
        mostrar_divisores(numero);
        i++;
        receber_dados_e_fazer_operacoes();
    }
    
}


int main()
{
    info_programa();

    receber_dados_e_fazer_operacoes();

    return 0;
}
