#include <stdio.h>


void info_programa()
{
    printf("Informe dois números para saber o MDC deles.\n");
}


int mdc(int num_1, int num_2)
{
    if (num_2 == 0) return num_1;
    return mdc(num_2, num_1%num_2);
}


int main()
{
    info_programa();

    int num_1, num_2;

    printf("Digite o primeiro número: ");
    scanf("%d", &num_1);
    printf("Digite o segundo número: ");
    scanf("%d", &num_2);

    int resultado = mdc(num_1, num_2);

    printf("O resultado do MDC entre %d e %d é %d \n", num_1, num_2, resultado);

    return 0;
}
