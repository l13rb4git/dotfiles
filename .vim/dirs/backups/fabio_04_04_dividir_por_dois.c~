#include <stdio.h>


void info_programa()
{
    printf("Informe um numero, ele será dividido por dois até que não sobre masi nada!\n");
}

float ate_a_ultima_div(float numero, float divisor)
{
    if (numero / divisor > 1) ate_a_ultima_div(numero/divisor, divisor);
    else return numero/divisor;
}


int main()
{
    info_programa();

    int numero;
    printf("Digite o número: ");
    scanf("%d", &numero);

    float resultado = ate_a_ultima_div(numero, 2);

    printf("A última divisão foi: %d / 2 = %4.3f\n", numero, resultado);

    return 0;
}
