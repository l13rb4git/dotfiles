#include <stdio.h>


void info_programa()
{
    printf("Informe dois números, serão mostrada divisões entre eles e seus quocientes.\n");
}


void divisoes(int x, int n)
{
    int quociente = x / n;

    if (n >= 2)
    {
        printf("%d / %d = %d\n", x, n, quociente);
        divisoes(quociente, n - 1);
    }
    
}


int main()
{
    info_programa();

    int num_x, num_n;

    printf("Digite o valor do X: ");
    scanf("%d", &num_x);
    printf("Digite o valor do N: ");
    scanf("%d", &num_n);

    divisoes(num_x, num_n);

    return 0;
}
