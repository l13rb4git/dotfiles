#include <stdio.h>


void info_programa()
{
    printf("Informe um número para saber quantos dígitos ele possui.\n");
}


int calcular_qtd_digitos(int numero)
{
    static int count = 0;

    if (numero > 1)
    {
        count++;
        calcular_qtd_digitos(numero / 10);
    }
    return count;
}


int main()
{
    info_programa();

    int numero;
    printf("Digite o número: ");
    scanf("%d", &numero);

    int qtd_digitos = calcular_qtd_digitos(numero);

    printf("O número %d tem %d dígitos.\n", numero, qtd_digitos);

    return 0;
}
