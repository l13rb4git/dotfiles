#include <stdio.h>


void info_programa()
{
    printf("Informe um número e outros mais que forem pedidos, "
            "o programa encerará quando a soma do número atual com "
            "o anterior for igual ao primeiro.\n");
}


void encontrar_soma(int primeiro_numero)
{
    static int numero_anterior = 0;
    int numero_atual; 
    printf("Digite o próximo número: ");
    scanf("%d", &numero_atual);

    if (numero_atual + numero_anterior != primeiro_numero) 
    {
        numero_anterior = numero_atual;
        encontrar_soma(primeiro_numero); 
    }
}


int main()
{
    info_programa();

    int numero;
    printf("Digite o número: ");
    scanf("%d", &numero);
    encontrar_soma(numero);

    return 0;
}
