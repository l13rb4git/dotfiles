section .data
    request: db "Name? " 
    requestL:en equ $-request ; getting the len of the string

    wc db "Your name is: "
    wcLen equ $-wc ; getting the len of the string


section .bss 
     name resb 16 

 
section .text
    global _start

 
_start:
    call _printRequest 
    call _getName 
    call _printWellcome
    call _printName 

    mov rax, 60
    mov rdi, 0
        syscall


_printRequest:
    mov rax, 1 ; sys_write 
    mov rdi, 1 ; standart output 
    mov rsi, request ; taking the buffer in request 
    mov rdx, requestLen
    syscall
    ret

_getName:
    mov rax, 0 ; sys_read
    mov rdi, 0 ; standart input
    mov rsi, name ; location to write
    mov rdx, 16
    syscall
    ret

_printWellcome:
    mov rax, 1
    mov rdi, 1 
    mov rsi, wc
    mov rdx, wcLen
    syscall
    ret

_printName:
    mov rax, 1
    mov rdi, 1 
    mov rsi, name
    mov rdx, 16
    syscall
    ret
    
