
colecao = [{'nome': '12345'}, {'nome': '12'}, {'nome': '12345678910'}]

def listar_todos(colecao):
    cabecalho('TODOS OS VEREADORES')
    print(f'NOME{espaco_item(colecao, 'nome'}NÚMERO    VOTOS   PARTIDO   COLIGAÇÃO ')
    print(colecao['nome'], 
            espaco_nome(colecao),
            colecao['numero'],
            )


def get_maior_len(colecao, chave):
    maior_len = 0
    for registro in colecao:
        if maior_len < len(registro[chave]):
            maior_len = len(registro[chave])
    return maior_len
    


def espaco_item(colecao, chave):
    numero_espacos = get_maior_len(colecao, chave)
    espacos = '   ' # Tamanho de um tab (3 espacos)
    espacos += ' ' * numero_espacos 
    return espacos


